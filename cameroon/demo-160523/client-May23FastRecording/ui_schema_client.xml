<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">


<h:head>
    <h:title>Linguistic data documentation</h:title>
    <model>
        <instance>
            <faims id="ldd_client">

               <style>
                <orientation>
                    <orientation/>
                </orientation>
            <even>
                <layout_weight/>
            </even>
            <large>
              <layout_weight/>
            </large>
          </style>
      
                <user>
                    <usertab>
                         <container12>
                            <child1>
                                <user_keyword/>
                            </child1>
                            <child2>
                                <user_Search/>
                            </child2>
                        </container12>
                        <users/>
                        <login/>
                    </usertab>
                </user>
                 
                 
                <control>         
                    <survey_control>
                        <New_Survey/>
                         <container7>
                            <child1>
                                <survey_keyword/>
                            </child1>
                            <child2>
                                <Survey_Search/>
                            </child2>
                        </container7>
                        <surveyList/>                      
                    </survey_control>
                    
                    <other_control>
                       <fieldTrip_New_bn/>
                      <fieldTrip_Search_Ct>
                        <child1>
                                <fieldTrip_Search_kw/>
                            </child1>
                            <child2>
                                <fieldTrip_Search_bn/>
                            </child2>
                      </fieldTrip_Search_Ct>
                      <fieldTripList/>
                    </other_control>     
                  
                    <user_control>              
                        <New_User/>
                         <container8>
                            <child1>
                                <person_keyword/>
                            </child1>
                            <child2>
                                <Person_Search/>
                            </child2>
                        </container8>
                        <userList/>
                    </user_control>
                    
                  
                    <language_control>
                        <New_Language/>
                         <container9>
                            <child1>
                                <language_keyword/>
                            </child1>
                            <child2>
                                <Language_Search/>
                            </child2>
                        </container9>
                        <languageList/>
                    </language_control>
                   
         
                    <file_control> 
                        <fileCategorySelect/>                   
                        <!--New_File/-->
                        <container10>
                            <child1>
                                <file_keyword/>
                            </child1>
                            <child2>
                                <File_Search/>
                            </child2>
                        </container10>
                        <fileList/>
                    </file_control>
                </control>
                
                <questionnaireListAll>
                   <questionnaireListInfo>
                   </questionnaireListInfo> 
                </questionnaireListAll>
               
                   <questionnaireInfo>
                    <surveyQuesnirHidden>
                    </surveyQuesnirHidden>
                    <surveyQuestionnaire>
                    </surveyQuestionnaire>
                </questionnaireInfo>
              
                <sessionForAnswer>
                  <sssHidden>
                  </sssHidden>
                    <sssAnsBasicInfo>
                    </sssAnsBasicInfo>
                    <sssPersonInfo>
                    </sssPersonInfo>
                    <sssAnsList>                     
                    </sssAnsList>
                </sessionForAnswer>
                
                 <survey>
                    <answerHidden>                      
                    </answerHidden>
                    
                    <answerBasic>        
                   </answerBasic>   
                                         
                   <answerFile>
                   </answerFile>                                              
                </survey>                   
                
                <file>
                   <fileHidden>
                  </fileHidden>
                    <fileInfo>
                    </fileInfo>
                </file>

                <personRoleSelect>
                    <personRoleSelectInfo>
                    </personRoleSelectInfo>
                </personRoleSelect>

                <person>     
                 <personInfoHide>
                </personInfoHide>

                  <personInfo>
                  </personInfo>
                </person>
                
                <language>
                  <languageInfo>
                    <languageID/>
                    <languageName/>
                    <languageOtherNames/>
                    <Finish_New_Language/>
                  </languageInfo>
                </language>

                <introSssList>
                    <introSssInfo>
                        <new_intro_sss/>
                        <intrSessionList/>
                    </introSssInfo>
                </introSssList>
                
                <fieldTrip_control>
                    <fieldTripInfo>
                    </fieldTripInfo>
                </fieldTrip_control>

                <fieldTrip>
                    <fieldTripBasicInfo>
                    </fieldTripBasicInfo>
                    <fieldTripSession>
                    </fieldTripSession>
                    <fieldTripBasicInfoHidden>
                    </fieldTripBasicInfoHidden>
                </fieldTrip>
            </faims>
        </instance>
      
    </model>
</h:head>


<h:body>
    <group ref="style">
      <label/>
      <group ref="orientation">
        <label/>
        <input ref="orientation">
          <label>horizontal</label>
        </input>
      </group>
      <group ref="even">
        <label/>
        <input ref="layout_weight">
          <label>1</label>
        </input>
      </group>
      <group ref="large">
        <label/>
        <input ref="layout_weight">
          <label>3</label>
        </input>
      </group>
    </group>
   
     <group ref="user">
      <label>User List</label>
      <group ref="usertab">
        <label>User List</label>
         <group ref="container12" faims_style="orientation">
        
          <label></label>
          <group ref="child1" faims_style="even">
            <label></label>
             <input ref="user_keyword">
                <label>User name</label>
            </input>
        </group>
       <group ref="child2" faims_style="even">
            <label></label>
             <trigger ref="user_Search" faims_style_class="faims-blue">
                <label>Search</label>
            </trigger>
          </group>
        
        </group>
        
        <select1 appearance="compact" ref="users" faims_style_class="user-list">
          <label>Users:</label>
          <item>
            <label>placeholder</label>
            <value>placeholder</value>
          </item>
        </select1>
      </group>
    </group>
    
    <group ref="control" faims_scrollable="false">
        
        <label>{Control}</label>
        
        
        <group ref="survey_control" faims_scrollable="false">
            <label>Session</label>
            <!--No input here-->
            <trigger ref="New_Survey" faims_style_class="faims-blue">
                <label>New Session</label>
            </trigger>
            
            <group ref="container7" faims_style="orientation">
        
          <label></label>
          <group ref="child1" faims_style="even">
            <label></label>
             <input ref="survey_keyword">
                <label>Keyword</label>
            </input>
        </group>
       <group ref="child2" faims_style="even">
            <label></label>
             <trigger ref="Survey_Search" faims_style_class="faims-blue">
                <label>Search</label>
            </trigger>
          </group>
        
        </group>
        
            
            <select1  ref="surveyList" appearance="compact" faims_annotation="false" faims_certainty="false" faims_style_class="survey-list">
                <label>Tap to view session</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>

        
       
        
        <group ref="user_control" faims_scrollable="false">
            <label>Person</label>
            <trigger ref="New_User" faims_style_class="faims-blue">
                <label>New Person</label>
            </trigger>
        <group ref="container8" faims_style="orientation">
        
          <label></label>
          <group ref="child1" faims_style="even">
            <label></label>
             <input ref="person_keyword">
                <label>Name keyword</label>
            </input>
         
          </group>
       <group ref="child2" faims_style="even">
            <label></label>
             <trigger ref="Person_Search" faims_style_class="faims-blue">
                <label>Search</label>
            </trigger>
          </group>
        </group>

            <select1 appearance="compact" ref="userList" faims_style_class="user-list">
                <label>Tap to view person</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        
         <group ref="language_control" faims_scrollable="false">
            <label>Language</label>
            <!--No input here-->
            <trigger ref="New_Language" faims_style_class="faims-blue">
                <label>New Language</label>
            </trigger>
            
             <group ref="container9" faims_style="orientation">
        
          <label></label>
          <group ref="child1" faims_style="even">
            <label></label>
             <input ref="language_keyword">
                <label>Keyword</label>
            </input>
         
          </group>
       <group ref="child2" faims_style="even">
            <label></label>
             <trigger ref="Language_Search" faims_style_class="faims-blue">
                <label>Search</label>
            </trigger>
          </group>
        </group>
        
            <!--TODO: in ui_styling.css add language-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="languageList" faims_style_class="language-list">
                <label>Tap to view language</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        <group ref="file_control" faims_scrollable="false">
            <label>File</label>
 
          <select1 ref="fileCategorySelect">
            <label>File Category:</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
    
             <group ref="container10" faims_style="orientation">
        
          <label></label>
          <group ref="child1" faims_style="even">
            <label></label>
             <input ref="file_keyword">
                <label>Filename keyword</label>
            </input>
         
          </group>
       <group ref="child2" faims_style="even">
            <label></label>
             <trigger ref="File_Search" faims_style_class="faims-blue">
                <label>Search</label>
            </trigger>
          </group>
        </group>
        
            <select1 ref="fileList" appearance="compact" faims_annotation="false" faims_certainty="false" faims_style_class="file-list">
                <label>Tap to view file</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        <group ref="other_control" faims_scrollable="false">
            <label>Other</label>
            <trigger ref="fieldTrip_New_bn" faims_style_class="faims-blue">
                <label>New FieldTrip</label>
            </trigger>
            
            <group ref="fieldTrip_Search_Ct" faims_style="orientation">
        
          <label></label>
          <group ref="child1" faims_style="even">
            <label></label>
             <input ref="fieldTrip_Search_kw">
                <label>Keyword</label>
            </input>
        </group>
       <group ref="child2" faims_style="even">
            <label></label>
             <trigger ref="fieldTrip_Search_bn" faims_style_class="faims-blue">
                <label>Search</label>
            </trigger>
          </group>
        
        </group>
        
            
            <select1  ref="fieldTripList" appearance="compact" faims_annotation="false" faims_certainty="false" faims_style_class="survey-list">
                <label>Tap to view FieldTrip</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
    </group>
    
    <group ref="questionnaireListAll" faims_scrollable="false">
          <label>Questionnaire</label>
           <group ref="questionnaireListInfo" faims_scrollable="false">
            <label>Questionnaire</label>
            </group>
    </group>
    
    
    <group ref="questionnaireInfo" faims_archent_type="Questionnaire" faims_scrollable="false">
          <label>Questionnaire info</label>
        <group ref="surveyQuesnirHidden" faims_hidden="true">
            <label>currentQuesnirHiddenInfo</label>
        </group>

         <group ref="surveyQuestionnaire">
            <label>Questionnaire info</label>
        </group>
      </group>
      

    <group ref="sessionForAnswer" faims_archent_type="Session" faims_scrollable="false">
            <label>Session</label>
            <group ref="sssHidden" faims_hidden="true">
                <label>Session info</label>
            </group>
            <group ref="sssAnsBasicInfo">
                <label>Session</label>
            </group>
         
             <group ref="sssPersonInfo">
                 <label>Person</label>
             </group>

            <group ref="sssAnsList">
                 <label>Answers</label>
            </group>
    </group>    
      
      <group ref="survey" faims_archent_type="AnswerToQuestionnaire" faims_scrollable="false">
        <label>Survey/Answer</label>
        
        
        <group ref="answerHidden" faims_hidden="true">
            <label></label>        
        </group>
        
        <group ref="answerBasic">
            <label>Basic Info</label>
        </group>

        <group ref="answerFile">
             <label>Files</label>
            </group>
    </group>
    
    <group ref="file" faims_archent_type="File">
        <label>File</label>
        <group ref="fileHidden" faims_hidden="true">
            <label>Basic Info</label>
        </group>
        <group ref="fileInfo">
            <label>File Info</label>
        </group>
    </group>
  
     <group ref="personRoleSelect">
        <label>Person Role</label>  

        <group ref="personRoleSelectInfo">
          <label>Person General Role</label>
        </group>

    </group>


        
      <group ref="person" faims_archent_type="Person">
        <label>Person</label>

        <group ref="personInfoHide" faims_hidden="true">
          <label>{PersonInfoHide}</label>
        </group>
        
        <group ref="personInfo">
          <label>Person Info</label>
        </group>
    </group>

     <group ref="introSssList">
        <label>Intro Session</label>
        <group ref="introSssInfo" >
            <label>Intro sessions</label>
            <trigger ref="new_intro_sss" faims_style_class="faims-blue">
                <label>New session</label>
            </trigger>
    
            <select1 appearance="compact" ref="intrSessionList" faims_style_class="survey-list" faims_annotation="true">
                <label>Tap to view session</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
     </group>


     <group ref="language" faims_archent_type="Language">
        <label>Language</label>
        <group ref="languageInfo">
          <label>Language Info</label>
            <input ref="languageID" faims_attribute_name="LanguageID" faims_attribute_type="measure" faims_certainty="false" faims_annotation="true" faims_style_class="required">
              <label>Language label</label>
            </input>
            <input ref="languageName" faims_attribute_name="LanguageName" faims_attribute_type="measure" faims_certainty="false" faims_annotation="true" faims_style_class="required">
              <label>Language name</label>
            </input>
            <input ref="languageOtherNames" faims_attribute_name="LanguageOtherNames" faims_attribute_type="measure" faims_certainty="false" faims_annotation="true">
              <label>Language other names</label>
            </input>      
            <trigger ref="Finish_New_Language" faims_style_class="faims-blue">
                <label>Save Language</label>
            </trigger>
      </group>
    </group>
    <group ref="fieldTrip_control">
        <label>FieldTrip</label>
        <group ref="fieldTripInfo">
          <label>FieldTrip Info</label>
      </group>
    </group>
    <group ref="fieldTrip" faims_archent_type="FieldTrip">
        <label>FieldTrip</label>
        <group ref="fieldTripBasicInfo">
          <label>Basic Info</label>
      </group>
      <group ref="fieldTripSession">
          <label>Sessions</label>
      </group>
      <group ref="fieldTripBasicInfoHidden" faims_hidden="true">
          <label>Hidden</label>
      </group>
    </group>
 </h:body>
</h:html>