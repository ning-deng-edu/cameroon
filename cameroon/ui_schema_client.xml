<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">


<h:head>
    <h:title>Linguistic data documentation</h:title>
    <model>
        <instance>
            <faims id="ldd_client">
                <!--part 1: Define ui structure-->
                <style>
                    <orientation>
                        <orientation/>
                    </orientation>
                    <even>
                        <layout_weight/>
                    </even>
                    <leftBigger>
                        <layout_weight/>
                    </leftBigger>
                </style>
                 <!--user login-->
                <user>
                    <usertab>
                        <users/>
                        <login/>
                    </usertab>
                </user>
                 
                 
                <control>
                    <!--suvey control tab,used for manipulate survey-->
                    <survey_control>
                        <!--<newQuestionnaireName/>-->
                        <interviwerSelect/>
                        <intervieweeSelect/>
                        <questionnaireSelect/>
                        <New_Survey/>
                    </survey_control>
                
                    <!--user tab,used for manipulate user info-->
                    <user_control>
                        <!--newUserName/-->
                        <New_User/>
                        <userList/>
                    </user_control>
                    
                    <!--language tab,used for manipulate language info-->
                    <language_control>
                        <!--newLanguageName/-->
                        <New_Language/>
                        <languageList/>
                    </language_control>
                    
                    
                    <!--session tab,used for manipulate session info-->
                    <session_control>
                        <!--newUserName/-->
                        <New_Session/>
                        <sessionSearch>
                            <session_Name/>
                            <session_ID/>
                        </sessionSearch>
                        <sessionList/>
                    </session_control>
                    
                    <!--file tab,used for manipulate files-->
                    <file_control>
                        <!--newUserName/-->
                        <New_File/>
                        <fileList/>
                    </file_control>
                </control>
                
                <survey>
                    <answer>
                        <answerChoice/>
                        <answerText/>
                        <answerFile/>
                        <Take_New_Recording/>
                        <Take_New_Video/>
                        <Take_New_Photo/>
                        <!--<interviewerList/>
                        <intervieweeList/-->
                        <startTimestamp/>
                        <endTimestamp/>
                        <Finish_New_Answer/>
                    </answer>
                </survey>
                
                <person>
                    <personID/>
                    <personName/>
                    <personOtherNames/>
                    <personPhoto/>
                    <Take_Photo/>
                    <Finish_New_Person/>
                </person>
                
                <language>
                    <languageID/>
                    <languageName/>
                    <languageOtherNames/>
                    <Finish_New_Language/>
                </language>
                
                
                <session>
                    <sessionID/>
                    <sessionName/>
                    <sessionFile/>
                    <sessionStartTimetamp/>
                    <sessionEndTimestamp/>
                    <Finish_New_Session/>
                </session>
                
                <file>
                    <fileID/>
                    <fileName/>
                    <fileType/>
                    <fileCreator/>
                    <!--filePath/-->
                    <Finish_New_File/>
                </file>
            </faims>
        </instance>
        <bind nodeset="faims/survey/answer/answerText" type="freetext"/>
        <bind nodeset="faims/survey/answer/startTimestamp" type="time"/>
        <bind nodeset="faims/survey/answer/endTimestamp" type="time"/>
        <bind nodeset="faims/person/personName" type="String"/>
        <bind nodeset="faims/person/personOtherNames" type="String"/>
        <bind nodeset="faims/Language/languageName" type="String"/>
        <bind nodeset="faims/Language/languageOtherNames" type="String"/>
        <bind nodeset="faims/session/sessionName" type="String"/>
        <bind nodeset="faims/session/startTimestamp" type="time"/>
        <bind nodeset="faims/session/endTimestamp" type="time"/>
        <bind nodeset="faims/file/fileName" type="String"/>
    </model>
</h:head>


<h:body>
    <group ref="style">
      <label/>
      <group ref="orientation">
        <label/>
        <input ref="orientation">
          <label>horizontal</label>
        </input>
      </group>
      <group ref="even">
        <label/>
        <input ref="layout_weight">
          <label>1</label>
        </input>
      </group>
      <group ref="large">
        <label/>
        <input ref="layout_weight">
          <label>3</label>
        </input>
      </group>
    </group>
    
     <group ref="user">
      <label>{User_List}</label>
      <group ref="usertab">
        <label>{User_List}</label>
        <select1 appearance="compact" ref="users" faims_style_class="user-list">
          <label>{Users}:</label>
          <item>
            <label>placeholder</label>
            <value>placeholder</value>
          </item>
        </select1>
      </group>
    </group>
    
    <group ref="control">
        
        <label>{Control}</label>
        
        
        <group ref="survey_control">
            <label>{Survey}</label>
            <!--No input here-->
            <trigger ref="New_Survey" faims_style_class="faims-blue">
                <label>New {survey}</label>
            </trigger>
            <!--TODO: in ui_styling.css add person-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="interviewerSelect" faims_style_class="person-list">
                <label>{TapInterviwerID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="intervieweeSelect" faims_style_class="person-list">
                <label>{TapInterviweeID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
            <!--TODO: in ui_styling.css add questionnaire-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="questionnaireSelect" faims_style_class="questionnaire-list">
                <label>{TapQuestionnareID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        <group ref="session_control">
            <label>{Session}</label>
            <!--No input here-->
            <trigger ref="New_Session" faims_style_class="faims-blue">
                <label>New {session}</label>
            </trigger>
            <!--TODO: in ui_styling.css add quesion-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="sessionList" faims_style_class="session-list">
                <label>{TapSessionID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
            <select1 ref="session_Name" faims_certainty="false" faims_annotation="false">
                <label>{session_Name}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
            <select1 appearance="compact" ref="session_ID" faims_certainty="false" faims_annotation="false">
                <label>{session_ID}</label>
                <item>
                   <label>placeholder</label>
                   <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        
        <group ref="user_control">
            <label>{User}</label>
            <!--No input here-->
            <trigger ref="New_User" faims_style_class="faims-blue">
                <label>New {person}</label>
            </trigger>
            <!--TODO: in ui_styling.css add user-list class-->
            <select1 appearance="compact" ref="userList" faims_style_class="user-list">
                <label>{TapPersonID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        
        <group ref="language_control">
            <label>{Language}</label>
            <!--No input here-->
            <trigger ref="New_Language" faims_style_class="faims-blue">
                <label>New {language}</label>
            </trigger>
            <!--TODO: in ui_styling.css add language-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="languageList" faims_style_class="language-list">
                <label>{TapLanguageID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        <group ref="file_control">
            <label>{File}</label>
            <!--No input here-->
            <trigger ref="New_File" faims_style_class="faims-blue">
                <label>New {file}</label>
            </trigger>
            <!--TODO: in ui_styling.css add language-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="fileList" faims_style_class="file-list">
                <label>{TapFileID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
    </group>
    
    <group ref="survey/answer" faims_archent_type="answer">
        <label>{Survey-Answer}</label>
        <input ref="answerChoice" faims_attribute_name="AnswerChoice" faims_attribute_type="freetext" faims_certainty="false" faims_annotation="false">
          <label>{answerChoice}</label>
        </input>
        <input ref="answerText" faims_attribute_name="AnswerText" faims_attribute_type="freetext" faims_certainty="false" faims_annotation="false">
          <label>{answerText}</label>
        </input>
        <input ref="answerFile" faims_attribute_name="AnswerFile" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{answerFile}</label>
        </input>
        <trigger ref="Take_New_Recording" faims_style_class="faims-blue">
                <label>New {file}</label>
        </trigger>
        <trigger ref="Take_New_Video" faims_style_class="faims-blue">
                <label>New {file}</label>
        </trigger>
        <trigger ref="Take_New_Photo" faims_style_class="faims-blue">
                <label>New {file}</label>
        </trigger>
        <input ref="startTimestamp" faims_attribute_name="StartTimeStamp" faims_attribute_type="time" faims_certainty="false" faims_annotation="false">
          <label>{answerText}</label>
        </input>
        <input ref="endTimestamp" faims_attribute_name="EndTimeStamp" faims_attribute_type="time" faims_certainty="false" faims_annotation="false">
          <label>{answerText}</label>
        </input>
        <trigger ref="Finish_New_Answer" faims_style_class="faims-blue">
                <label>{Finish_New_Answer}</label>
        </trigger>
    </group>
    

    <group ref="session" faims_archent_type="session">
        <label>{Session}</label>
        <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="sessionFile" faims_style_class="file-list">
                <label>{TapFileID}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
        </select1>
        <trigger ref="Finish_New_Session" faims_style_class="faims-blue">
                <label>{Finish_New_Session}</label>
        </trigger>
        <input ref="sessionName" faims_attribute_name="SessionName" faims_attribute_type="String" >
            <label>{sessionName}</label>
        </input>
        <input ref="sessionTimestamp" faims_attribute_name="SessionStartTimestamp" faims_attribute_type="time" faims_certainty="false" faims_annotation="false">
          <label>{sessionTimestamp}</label>
        </input>
        <input ref="sessionEndTimestamp" faims_attribute_name="SessionEndTimestamp" faims_attribute_type="time" faims_certainty="false" faims_annotation="false">
          <label>{sessionEndTimestamp}</label>
        </input>
    </group>

    
    <group ref="file" faims_archent_type="file">
        <label>{File}</label>
        <input ref="fileName" faims_attribute_name="FileName" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{fileName}</label>
        </input>
        <input ref="fileType" faims_attribute_name="FileType" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{questionType}</label>
        </input>
        <input ref="fileCreator" faims_attribute_name="FileCreator" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{fileCreator}</label>
        </input>
        <trigger ref="Finish_New_File" faims_style_class="faims-blue">
                <label>{Finish_New_File}</label>
        </trigger>
    </group>
    
    
    <group ref="person" faims_archent_type="person">
        <label>{Person info}</label>
        <input ref="personName" faims_attribute_name="PersonName" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{personName}</label>
        </input>
        <input ref="personOtherNames" faims_attribute_name="PersonOtherNames" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{personOtherNames}</label>
        </input>
        <input ref="personPhoto" faims_attribute_name="PersonPhoto" faims_attribute_type="file" faims_certainty="false" faims_annotation="false">
          <label>{personPhoto}</label>
        </input>
        <trigger ref="Take_Photo" faims_style_class="faims-blue">
                <label>New {Take_Photo}</label>
        </trigger>
        <trigger ref="Finish_New_Person" faims_style_class="faims-blue">
                <label>New {Finish_New_Person}</label>
        </trigger>
    </group>
    
     <group ref="language" faims_archent_type="language">
        <label>{Language}</label>
        <input ref="languageID" faims_attribute_name="LanguageID" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{languageID}</label>
        </input>
        <input ref="languageName" faims_attribute_name="LanguageName" faims_attribute_type="String" faims_certainty="false" faims_annotation="false">
          <label>{languageName}</label>
        </input>
        <input ref="languageOtherNames" faims_attribute_name="LanguageOtherNames" faims_attribute_type="freetext" faims_certainty="false" faims_annotation="false">
          <label>{languageOtherNames}</label>
        </input>
        
        <trigger ref="Finish_New_Lanugage" faims_style_class="faims-blue">
                <label>New {Finish_New_Lanugage}</label>
        </trigger>
    </group>
</h:body>
</h:html>