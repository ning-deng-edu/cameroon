<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">


<h:head>
    <h:title>Linguistic data documentation</h:title>
    <model>
        <instance>
            <faims id="ldd_client">

               <style>
                <orientation>
                    <orientation/>
                </orientation>
            <even>
                <layout_weight/>
            </even>
            <large>
              <layout_weight/>
            </large>
          </style>
      
                <user>
                    <usertab>
                         <container12>
                            <child1>
                                <user_keyword/>
                            </child1>
                            <child2>
                                <user_Search/>
                            </child2>
                        </container12>
                        <users/>
                        <login/>
                    </usertab>
                </user>
                 
                 
                <control>         
                    <survey_control>                   
                    </survey_control>

                    <other_control>
                    </other_control>    

                    <user_control>              
                    </user_control>

                    <language_control>
                    </language_control>

                    <file_control>
                    </file_control>

                    <querytest>
                    </querytest>
                </control>
                
                <language>
                  <languageInfo>
                  </languageInfo>
                </language>

                 <fieldTrip>
                    <fieldTripBasicInfo>
                    </fieldTripBasicInfo>
                    <fieldTripSession>
                    </fieldTripSession>
                    <fieldTripBasicInfoHidden>
                    </fieldTripBasicInfoHidden>
                </fieldTrip>

            </faims>
        </instance>
      
    </model>
</h:head>


<h:body>
    <group ref="style">
      <label/>
      <group ref="orientation">
        <label/>
        <input ref="orientation">
          <label>horizontal</label>
        </input>
      </group>
      <group ref="even">
        <label/>
        <input ref="layout_weight">
          <label>1</label>
        </input>
      </group>
      <group ref="large">
        <label/>
        <input ref="layout_weight">
          <label>3</label>
        </input>
      </group>
    </group>
   
     <group ref="user">
      <label>User List</label>
      <group ref="usertab">
        <label>User List</label>
         <group ref="container12" faims_style="orientation">
        
          <label></label>
          <group ref="child1" faims_style="even">
            <label></label>
             <input ref="user_keyword">
                <label>User name</label>
            </input>
        </group>
       <group ref="child2" faims_style="even">
            <label></label>
             <trigger ref="user_Search" faims_style_class="faims-blue">
                <label>Search</label>
            </trigger>
          </group>
        
        </group>
        
        <select1 appearance="compact" ref="users" faims_style_class="user-list">
          <label>Users:</label>
          <item>
            <label>placeholder</label>
            <value>placeholder</value>
          </item>
        </select1>
      </group>
    </group>
    
    <group ref="control" faims_scrollable="false">
        
        <label>{Control}</label>
        
        
        <group ref="survey_control" faims_scrollable="false">
            <label>Session</label>
        </group>

         <group ref="other_control" faims_scrollable="false">
            <label>Other</label>
        </group>

        <group ref="user_control" faims_scrollable="false">
            <label>Person</label>
        </group>

        <group ref="language_control" faims_scrollable="false">
            <label>Language</label>
        </group>

        <group ref="file_control" faims_scrollable="false">
            <label>File</label>
        </group>

        <group ref="querytest">
          <label>{query}</label>
        </group>
    </group>
    

     <group ref="language" faims_scrollable="false">
        <label>Language</label>        
        <group ref="languageInfo" faims_scrollable="false">
            <label>Language Info</label>
        </group>
    </group>


     <group ref="fieldTrip" faims_archent_type="FieldTrip">
        <label>FieldTrip</label>
        <group ref="fieldTripBasicInfo">
          <label>Basic Info</label>
      </group>
      <group ref="fieldTripSession">
          <label>Sessions</label>
      </group>
      <group ref="fieldTripBasicInfoHidden" faims_hidden="true">
          <label>Hidden</label>
      </group>
    </group>
  
 </h:body>
</h:html>