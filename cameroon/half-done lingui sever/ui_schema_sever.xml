<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  
  <!-- ****** -->
  <h:head>
    <h:title>Linguistics Admin</h:title>
    <!--model lists user interface tabgroups, tabs and content of tabs-->
    <model>
      <instance>
        <faims id="Linguistics Admin">
          <style>
            <orientation>
              <orientation/>
            </orientation>
            <even>
              <layout_weight/>
            </even>
            <large>
              <layout_weight/>
            </large>
          </style>
          <user>
            <usertab>
              <users/>
              <login/>
            </usertab>
          </user>
          <control>
                    <!--questionnaire tab,used for manipulate questionnaires-->
                    <questionnaire_control>
                        <!--<newQuestionnaireName/>-->
                        <New_Questionnaire/>
                        <questionnaireList/>
                    </questionnaire_control>
                    <!--question tab,used for manipulate questions-->
                    <question_control>
                        <!--newQuestionContent/-->
                        <New_Question/>
                        <questionList/>
                    </question_control>
                    <!--user tab,used for manipulate user info-->
                    <user_control>
                        <!--newUserName/-->
                        <New_User/>
                        <userList/>
                    </user_control>
                    <!--language tab,used for manipulate language info-->
                    <language_control>
                        <!--newLanguageName/-->
                        <New_Language/>
                        <languageList/>
                    </language_control>
              </control>
          
                <questionnaire>
                    <questionnaire_info>
                        <questionnaireID/>
                        <questionnaireName/>
                        <questionnaireDescription/>
                        <Start_Question_Selection/>
                    </questionnaire_info>
                </questionnaire>
                
                <questionnaire_question>
                  <questionnaire_question_info>
                        <questionnaireID/>
                        <questionnaireName/>
                        <questionInQuestionnaire/>
                        <questionList/>
                        <New_Question/>                      
                        <Finish_Questionnaire_Creation/>
                  </questionnaire_question_info>
                </questionnaire_question>
                
               <questionBank>
                  <questionInfo>
                    <questionID/>
                    <questionContent/>
                    <questionType/>
                    <questionChoice/>
                    <questionLanguage/>
                    <Finish_New_Question/>
                  </questionInfo>
                </questionBank>
                
                <person>
                  <personInfo>
                    <personID/>
                    <personName/>
                    <personOtherNames/>
                    <personPhoto/>
                    <Take_Photo/>
                    <Finish_New_Person/>
                  </personInfo>
                </person>
                
                <language>
                  <languageInfo>
                    <languageID/>
                    <languageName/>
                    <languageOtherNames/>
                    <Finish_New_Language/>
                  </languageInfo>
                </language>
                
                
                
        </faims>
      </instance>
      <bind nodeset="faims/questionnaire/questionnaire_info/questionnaireName" type="freetext"/>
      <bind nodeset="faims/questionnaire/questionnaire_info/questionnaireDescription" type="freetext"/>
      <bind nodeset="faims/person/personInfo/personName" type="freetext"/>
      <bind nodeset="faims/person/personInfo/personOtherNames" type="freetext"/>
    </model>
  </h:head>
  <h:body>
    <group ref="style">
      <label/>
      <group ref="orientation">
        <label/>
        <input ref="orientation">
          <label>horizontal</label>
        </input>
      </group>
      <group ref="even">
        <label/>
        <input ref="layout_weight">
          <label>1</label>
        </input>
      </group>
      <group ref="large">
        <label/>
        <input ref="layout_weight">
          <label>3</label>
        </input>
      </group>
    </group>
    <group ref="user">
      <label>{User_List}</label>
      <group ref="usertab">
        <label>{User List}</label>
        <select1 appearance="compact" ref="users" faims_style_class="user-list">
          <label>{Users}:</label>
          <item>
            <label>placeholder</label>
            <value>placeholder</value>
          </item>
        </select1>
      </group>
    </group>
    <group ref="control">
        
        <label>{Admin}</label>
        
        
        <group ref="questionnaire_control">
            <label>{Questionnaire}</label>
            <!--No input here-->
            <trigger ref="New_Questionnaire" faims_style_class="faims-blue">
                <label>New {Questionnaire}</label>
            </trigger>
            <!--TODO: in ui_styling.css add quesionnaire-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="questionnaireList" faims_style_class="questionnaire-list">
                <label>{Tap questionnaire to view details}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        <group ref="question_control">
            <label>{Question}</label>
            <!--No input here-->
            <trigger ref="New_Question" faims_style_class="faims-blue">
                <label>New {Question}</label>
            </trigger>
            <!--TODO: in ui_styling.css add quesion-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="questionList" faims_style_class="question-list">
                <label>{Tap question to view details}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        
        <group ref="user_control">
            <label>{User}</label>
            <!--No input here-->
            <trigger ref="New_User" faims_style_class="faims-blue">
                <label>New {Person}</label>
            </trigger>
            <!--TODO: in ui_styling.css add user-list class-->
            <select1 appearance="compact" ref="userList" faims_style_class="user_list">
                <label>{Tap person id to view details}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
        
        
        <group ref="language_control">
            <label>{Language}</label>
            <!--No input here-->
            <trigger ref="New_Language" faims_style_class="faims-blue">
                <label>New {Language}</label>
            </trigger>
            <!--TODO: in ui_styling.css add language-list class-->
            <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="languageList" faims_style_class="language-list">
                <label>{Tap language id to view details}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
            </select1>
        </group>
    </group>
    

    <group ref="questionnaire" faims_archent_type="Questionnaire">
        <label>{Questionnaire}</label>
        
        <group ref="questionnaire_info">
          <label>{Questionnaire Information}</label>
          <input ref="questionnaireID" faims_attribute_name="QuestionnaireID" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false" faims_read_only="false" faims_style_class="required">
            <label>{Questionnaire ID}</label>
          </input>
          
          <input ref="questionnaireName" faims_attribute_name="QuestionnaireName" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
            <label>{Questionnaire Name}</label>
          </input>
          
          <input ref="questionnaireDescription" faims_attribute_name="QuestionnaireDescription" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
            <label>{Questionnaire Description}</label>
          </input>
          
           <trigger ref="Start_Question_Selection" faims_style_class="faims-blue">
            <label>{Start/View Question Selection}</label>
          </trigger>  
    
        </group>        
    </group>
    
    
 
     <group ref="questionnaire_question">
        <label>{Questionnaire}</label>
        
        <group ref="questionnaire_question_info">
          <label>{Questionnaire Question Selction}</label>
          <input ref="questionnaireID" faims_read_only="true">
            <label>{Current Questionnaire ID}</label>
          </input>
          
          <input ref="questionnaireName" faims_read_only="true">
            <label>{Current Questionnaire Name}</label>
          </input>

        <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="questionInQuestionnaire" faims_style_class="quesion-list">
                <label>{Tap question to delete question from questionnaire}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
          </select1>
        
        
        <select1 appearance="compact" faims_annotation="false" faims_certainty="false" ref="questionList" faims_style_class="quesion-list">
                <label>{Tap question to add question to questionnaire}</label>
                <item>
                    <label>placeholder</label>
                    <value>placeholder</value>
                </item>
          </select1>
        
        <!--有疑问，这里要怎么表示外键-->     
          
          <trigger ref="New_Question" faims_style_class="faims-blue">
                <label>New Question</label>
          </trigger>
          
          
          <trigger ref="Finish_Questionnaire_Creation" faims_style_class="faims-blue">
            <label>Create/Change Questionnaire</label>
          </trigger>
        </group>        
    </group>
    
    
    
    
    <group ref="questionBank" faims_archent_type="QuestionBank">
        <label>{Question Bank}</label>
        <group ref="questionInfo">
          <label>{Question Information}</label>
          <input ref="questionID" faims_attribute_name="QuestionID" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
          <label>{Question ID}</label>
        </input>
        <input ref="questionContent" faims_attribute_name="QuestionContent" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
          <label>{Question Content}</label>
        </input>
        <input ref="questionType" faims_attribute_name="QuestionType" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
          <label>{Question Type--for now this is useless}</label>
        </input>
        <input ref="questionChoice" faims_attribute_name="QuestionChoice" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
          <label>{Question Choice--for now this is useless}</label>
        </input>
        <input ref="questionLanguage" faims_attribute_name="QuestionLanguage" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
          <label>{Question Language}</label>
        </input>
        <trigger ref="Finish_New_Question" faims_style_class="faims-blue">
                <label>Create/Change Question</label>
        </trigger>
        </group>
    </group>


    <group ref="person" faims_archent_type="Person">
        <label>{Person}</label>
        <group ref="personInfo">
          <label>{Person Information}</label>
           <input ref="personID" faims_attribute_name="PersonID" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
              <label>{Person ID}</label>
            </input>
            <input ref="personName" faims_attribute_name="PersonName" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
              <label>{Person Name}</label>
            </input>
            <input ref="personOtherNames" faims_attribute_name="PersonOtherNames" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
              <label>{Person Other Names}</label>
            </input>

            <select type="camera" faims_sync="true" ref="personPhoto" faims_attribute_name="PersonPhoto" faims_attribute_type="measure" faims_certainty="true" faims_annotation="true" faims_read_only="false">
            <label>{Photos}</label>
              <item>
                  <label>placeholder</label>
                  <value>placeholder</value>
              </item>
            </select>
            
            <trigger ref="Take_Photo" faims_style_class="faims-blue">
                <label>{Take Photo}</label>
            </trigger>
            <trigger ref="Finish_New_Person" faims_style_class="faims-blue">
                <label>Create/Change Person</label>
            </trigger>
        </group>
    </group>
    
    
    <group ref="language" faims_archent_type="Language">
        <label>{Language}</label>
        <group ref="languageInfo">
          <label>{Language Information}</label>
            <input ref="languageID" faims_attribute_name="LanguageID" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
              <label>{Language ID}</label>
            </input>
            <input ref="languageName" faims_attribute_name="LanguageName" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
              <label>{Language Name}</label>
            </input>
            <input ref="languageOtherNames" faims_attribute_name="LanguageOtherNames" faims_attribute_type="measure" faims_certainty="false" faims_annotation="false">
              <label>{Language Other Names}</label>
            </input>      
            <trigger ref="Finish_New_Language" faims_style_class="faims-blue">
                <label>Create/Change Language</label>
            </trigger>
      </group>
    </group> 
  </h:body>
</h:html>